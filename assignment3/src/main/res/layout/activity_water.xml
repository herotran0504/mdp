<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/res_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints="name"
        android:hint="@string/water_resource_name_hint"
        android:inputType="text"
        android:maxLines="1"
        android:theme="@style/EditTextTheme" />

    <EditText
        android:id="@+id/res_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints="name"
        android:hint="@string/res_location_hint"
        android:inputType="text"
        android:maxLines="1"
        android:theme="@style/EditTextTheme" />

    <EditText
        android:id="@+id/res_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints="name"
        android:hint="@string/res_type_hint"
        android:inputType="text"
        android:maxLines="1"
        android:theme="@style/EditTextTheme" />

    <Button
        android:id="@+id/add_btn"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/res_add_btn" />

    <TableLayout
        android:id="@+id/res_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        tools:background="@color/purple_200"
        tools:layout_height="200dp" />

</androidx.appcompat.widget.LinearLayoutCompat>